{
  "name": "ui",
  "version": "0.0.0",
  "description": "Visualise and edit your Zigflows",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "copy": "npm run copy:fonts",
    "copy:fonts": "rm -Rf ./static/fonts && cp -rf node_modules/@mdi/font/fonts/ ./static/",
    "dev": "vite dev",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "prebuild": "npm run copy",
    "predev": "npm run copy",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "start": "node build",
    "update": "npx npm-check-updates -u"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/js": "^9.39.2",
    "@mdi/font": "^7.4.47",
    "@sveltejs/adapter-node": "^5.5.2",
    "@sveltejs/kit": "^2.50.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25",
    "@xyflow/svelte": "^1.5.0",
    "bulma": "^1.0.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^17.1.0",
    "highlight.js": "^11.11.1",
    "js-yaml": "^4.1.1",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "sass": "^1.97.3",
    "svelte": "^5.48.1",
    "svelte-check": "^4.3.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "uuid": "^13.0.0",
    "vite": "^7.3.1"
  }
}
