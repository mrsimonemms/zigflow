{
  "name": "zigflow-ui",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "vite build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "copy:schema": "cp ../docs/static/schema.yaml static/schema.yaml",
    "dev": "vite dev",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint . && npm run lint:md",
    "lint:md": "markdownlint-cli2 '**/*.md' '#node_modules'",
    "prebuild": "npm run copy:schema",
    "predev": "npm run copy:schema",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@xyflow/svelte": "^0.1.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.0",
    "bulma": "^1.0.0",
    "js-yaml": "^4.1.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/eslint": "^9.6.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.0",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "markdownlint-cli2": "^0.16.0",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.0",
    "sass": "^1.69.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "type": "module"
}
